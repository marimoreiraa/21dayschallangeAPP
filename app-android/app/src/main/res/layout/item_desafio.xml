<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconDesafio"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="Ícone desafio"
            android:src="@drawable/ic_default"
            app:tint="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tituloDesafio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desafio de Hidratação"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descricaoDesafio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beba a quantidade de água ideal e sinta a diferença em 3 semanas"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textProgresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/21 dias ativos"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

    </LinearLayout>

        <Button
            android:id="@+id/btnCheckin"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:padding="8dp"
            android:layout_marginStart="12dp"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>